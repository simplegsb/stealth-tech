<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:visibility="invisible">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/water_pump"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/water_pump"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" />

            <Switch
                android:id="@+id/water_heater"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/water_heater"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/water_pump"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" />

        </RelativeLayout>

    </RelativeLayout>

    <nz.stealthcampers.stealthtech.view.GraphView
        android:id="@+id/fresh_history"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="invisible" />

    <nz.stealthcampers.stealthtech.view.GraphView
        android:id="@+id/waste_history"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="invisible" />

</LinearLayout>
